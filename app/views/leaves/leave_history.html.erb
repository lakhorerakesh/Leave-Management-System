<div class="row">
  <div class="col-lg-12">
    <%if @leaves.present? %>
      <section class="panel">
        <header class="panel-heading">
          <b>Your Leave History</b> 
        </header>
        <table class="table table-striped table-advance table-hover">
          <thead>
            <tr>
             <th></i> Slno.</th>
              <th></i> Start Date</th>
              <th class="hidden-phone"> End Date</th>
              <th>Name</th>
              <th>Reason</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%  count = 0 %>
            <%  @leaves.each do |leave| %>
              <tr>
                <td><a href="#"><%=  count = count + 1 %></a></td>
                <td class="hidden-phone"><%=  leave.start_date %></td>
                <td><%=  leave.end_date %></td>
                <td><%= leave.user.name.upcase%></td>
                <td><span class=""><%=  leave.reason_for_leave.truncate(25) %></span></td>
                
                <td>
                <% if leave.status == "Approved"%>
                  <span class="label label-info label-mini">
                  <%=leave.status%></span>
                <%else%>
                  <span class="label label-danger label-mini">
                  <%=leave.status%></span>
                <%end%>
                </td>
              </tr>
            <%end%>
          <% else %>
            <div style="color: red;"> You have not applied for any leaves till now</div>
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>