<div class="row">
  <div class="col-lg-12">
    <%if @leaves.present? %>
      <section class="panel">
        <header class="panel-heading">
          <b>Approve These Leaves</b>
          <hr style="border: 1px solid #888;margin-top: 1px;margin-bottom: 0;"> 
        </header>
        <table class="table table-striped table-advance table-hover">
          <thead>
            <tr>
             <th></i> Slno.</th>
              <th></i> Start Date</th>
              <th class="hidden-phone"> End Date</th>
              <th>Name</th>
              <th>Total Leave</th>
              <th>Reason</th>
              <th>Action</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%  count = 0 %>
            <%  @leaves.each do |leave| %>
              <tr>
                <td><a href="#"><%=  count = count + 1 %></a></td>
                <td class="hidden-phone"><%=  leave.start_date %></td>
                <td><%=  leave.end_date %> </td>
                <td><%= leave.user.name.upcase%></td>
                <%if leave.total_days_count >1%>
                  <td><%= leave.working_days - leave.total_days_count%> Full days <%=leave.total_days_count%> Half days</td>
                <% else%>
                  <td><%= leave.working_days - leave.total_days_count%> Full days <%=leave.total_days_count%> Half day</td>
                <%end%>
                <td><span class=""><%=  leave.reason_for_leave.truncate(25) %></span></td>
                <td>
                  <%= link_to 'Show', leave_path(leave),class:"btn btn-success btn-xs" %>
                  <%= link_to 'Approve', approve_leave_leave_path(leave),class:"btn btn-primary btn-xs"%> 
                  <%= link_to 'Reject', approve_leave_leave_path(leave, :rejected => "Rejected"),class:"btn btn-danger btn-xs"%>
                </td>
              </tr>
            <%end%>
          <% else %>
            <div style="color: red;"> You do not have any leaves to Approve</div>
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>